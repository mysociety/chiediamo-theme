<div id="topnav" class="topnav">
    <ul id="navigation" class="navigation" >

        <li class="<%= 'selected' if params[:controller] == 'request' and ['new', 'select_authority'].include?(params[:action]) %>">
          <%= link_to _("Make a request"), select_authority_path, :id => 'make-request-link' %>
        </li>

        <li class="<%= 'selected' if params[:controller] == 'request' and !['new', 'select_authority'].include?(params[:action]) %>">
          <%= link_to _("Browse requests"), request_list_all_path %>
        </li>

        <li class="<%= 'selected' if params[:controller] == 'public_body' %>">
          <%= link_to _("View authorities"), list_public_bodies_default_path %>
        </li>


        <li><%= link_to "Chi Siamo", ' http://www.dirittodisapere.it/chi-siamo/' %></li>
        <li class="<%= 'selected' if params[:controller] == 'help' %>">
          <%= link_to _("Help"), help_about_path %>
        </li>

        <li class="navigation_search">
          <form class="navigation_search_form" method="get" action="<%= search_redirect_path %>" role="search">
            <label class="visually-hidden" for="navigation_search_input">
              <%= _("Search") %>
            </label>
            <%= text_field_tag 'query', params[:query], { :id => "navigation_search_input", :type => "search", :placeholder => _("Search"), :title => _("type your search term here") } %>
            <button type="submit"><%= _("Search") %></button>
          </form>
        </li>
    </ul>
</div>
